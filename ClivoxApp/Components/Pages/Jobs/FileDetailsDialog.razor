@using ClivoxApp.Models.Invoice

<MudDialog>
    <TitleContent>
        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
            <MudIcon Icon="@Icons.Material.Filled.AttachFile" />
            <MudText Typo="Typo.h6">@Resource.fileDetailsDialog_AddTitle</MudText>
        </MudStack>
    </TitleContent>
    <DialogContent>
        <MudAlert Severity="Severity.Info" Variant="Variant.Outlined" Class="mb-4">
            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                <MudIcon Icon="@Icons.Material.Filled.CloudUpload" />
                <MudText>@Resource.fileDetailsDialog_FileUploadedSuccess</MudText>
            </MudStack>
        </MudAlert>
        
        <MudTextField @bind-Value="_description" 
                      Label="@Resource.fileDetailsDialog_FileDescription" 
                      Variant="Variant.Outlined" 
                      Placeholder="@Resource.fileDetailsDialog_DescriptionPlaceholder"
                      Lines="3"
                      Class="mb-4"
                      HelperText="@Resource.fileDetailsDialog_DescriptionHelper" />
        
        <MudNumericField @bind-Value="_amount" 
                         Label="@Resource.fileDetailsDialog_ExpenseAmount" 
                         Variant="Variant.Outlined"
                         Format="F2"
                         Placeholder="0.00"
                         Min="0"
                         T="decimal"
                         Adornment="Adornment.Start"
                         AdornmentIcon="@Icons.Material.Filled.Euro"
                         HelperText="@Resource.fileDetailsDialog_AmountHelper" />
        
        <MudText Typo="Typo.caption" Color="Color.Secondary" Class="mt-2">
            @Resource.fileDetailsDialog_Tip
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Submit" 
                   Color="Color.Primary" 
                   Variant="Variant.Filled"
                   StartIcon="@Icons.Material.Filled.Save">
            @Resource.fileDetailsDialog_Save
        </MudButton>
        <MudButton OnClick="Cancel" 
                   Color="Color.Secondary"
                   StartIcon="@Icons.Material.Filled.Close">
            @Resource.fileDetailsDialog_Skip
        </MudButton>
    </DialogActions>
</MudDialog>