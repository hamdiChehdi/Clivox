@using ClivoxApp.Models.Invoice

<MudDialog>
    <TitleContent>Edit File Details</TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="_description" 
                      Label="File Description" 
                      Variant="Variant.Outlined" 
                      Placeholder="Enter a description for this expense proof file..."
                      Lines="3"
                      Class="mb-4" />
        
        <MudNumericField @bind-Value="_amount" 
                         Label="Expense Amount (€)" 
                         Variant="Variant.Outlined"
                         Format="F2"
                         Placeholder="0.00"
                         Min="0"
                         T="decimal"
                         Adornment="Adornment.Start"
                         AdornmentIcon="@Icons.Material.Filled.Euro" />
        
        <MudText Typo="Typo.caption" Color="Color.Secondary" Class="mt-2">
            Enter the description and amount for this expense proof file. The amount should reflect the expense value documented in this file.
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Submit" Color="Color.Primary" Variant="Variant.Filled">Save</MudButton>
        <MudButton OnClick="Cancel" Color="Color.Secondary">Cancel</MudButton>
    </DialogActions>
</MudDialog>